---
import MainLayout from "@/layouts/main.astro";

interface Props {
	content: {
		title: string;
		date?: string;
		description?: string;
	};
}

const { content } = Astro.props;
const { title, date, description } = content;

// Format date if provided
const formattedDate = date
	? new Date(date).toLocaleDateString("en-US", {
			year: "numeric",
			month: "long",
			day: "numeric",
		})
	: undefined;
---

<MainLayout content={{ title: `${title} | blog` }}>
	<article class="prose prose-invert max-w-none">
		<header class="mb-8">
			<a href="/blog" class="text-secondary hover:underline text-sm mb-4 inline-block"
				>‚Üê back to blog</a
			>
			<h1 class="text-4xl font-bold mb-2">{title}</h1>
			{
				formattedDate && (
					<time class="text-muted-foreground text-sm">{formattedDate}</time>
				)
			}
			{
				description && (
					<p class="text-lg text-muted-foreground mt-2">{description}</p>
				)
			}
		</header>
		<div class="blog-content">
			<slot />
		</div>
	</article>
</MainLayout>

<style is:global>
	.blog-content h1 {
		font-size: 1.875rem;
		font-weight: 700;
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	.blog-content h2 {
		font-size: 1.5rem;
		font-weight: 700;
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
	}

	.blog-content h3 {
		font-size: 1.25rem;
		font-weight: 700;
		margin-top: 1rem;
		margin-bottom: 0.5rem;
	}

	.blog-content p {
		margin-bottom: 1rem;
		line-height: 1.625;
	}

	.blog-content a {
		color: var(--color-secondary);
		text-decoration: underline;
	}

	.blog-content a:hover {
		text-decoration: none;
	}

	.blog-content ul,
	.blog-content ol {
		margin-bottom: 1rem;
		margin-left: 1.5rem;
	}

	.blog-content li {
		margin-bottom: 0.5rem;
	}

	.blog-content code {
		background-color: var(--color-muted);
		color: var(--color-black);
		padding: 0.125rem 0.375rem;
		border-radius: 0.25rem;
		font-size: 0.875rem;
		font-weight: 600;
	}

	.blog-content pre {
		background-color: var(--color-muted);
		padding: 1rem;
		border-radius: 0.5rem;
		margin-bottom: 1rem;
		overflow-x: auto;
	}

	.blog-content pre code {
		background-color: transparent;
		padding: 0;
	}

	.blog-content blockquote {
		border-left: 4px solid var(--color-secondary);
		padding-left: 1rem;
		font-style: italic;
		margin: 1rem 0;
	}

	.blog-content table {
		width: 100%;
		margin-bottom: 1rem;
		border-collapse: collapse;
	}

	.blog-content th,
	.blog-content td {
		border: 1px solid var(--color-muted);
		padding: 0.5rem 1rem;
	}

	.blog-content th {
		background-color: var(--color-muted);
		font-weight: 700;
	}
</style>
